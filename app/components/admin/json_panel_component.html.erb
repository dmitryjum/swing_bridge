<section class="rounded-xl border border-slate-800 bg-slate-900/70 shadow-[0_10px_30px_rgba(0,0,0,0.35)]">
  <header class="flex items-center justify-between px-4 py-2 border-b border-slate-800">
    <h3 class="text-sm font-semibold text-slate-200"><%= @title %></h3>
    <button type="button" data-controller="clipboard" data-action="click->clipboard#copy" data-clipboard-text-value="<%= pretty_json %>" class="text-xs text-cyan-300 hover:text-cyan-200">Copy</button>
  </header>
  <pre class="p-4 text-xs font-mono text-slate-200 overflow-auto max-h-[660px]"><%= pretty_json %></pre>
</section>
