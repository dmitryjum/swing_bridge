<div class="flex flex-col gap-1 px-3 py-2 rounded-xl border border-slate-800 transition <%= @selected ? "bg-slate-900/90 shadow-sm ring-1 ring-cyan-400/40" : "bg-slate-950/60 hover:bg-slate-900/80" %>">
  <div class="flex items-center justify-between gap-2">
    <%= render Admin::StatusPillComponent.new(status: @attempt.status) %>
    <span class="text-xs text-slate-500"><%= @attempt.created_at.strftime("%Y-%m-%d %H:%M") %></span>
  </div>
  <div class="text-sm font-medium text-slate-100 truncate"><%= @attempt.email %></div>
  <div class="text-xs text-slate-400 font-mono truncate">
    club <%= @attempt.club %> â€¢ id <%= @attempt.id %>
  </div>
  <% if @attempt.error_message.present? %>
    <div class="text-xs text-rose-300 truncate"><%= @attempt.error_message %></div>
  <% end %>
</div>
