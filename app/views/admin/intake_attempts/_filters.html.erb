<form action="<%= admin_intake_attempts_path %>" method="get" data-controller="search" data-turbo-frame="attempts_list" data-search-detail-frame-value="attempt_detail" class="mt-4 flex flex-wrap items-center gap-3">
  <input type="search" name="q" value="<%= params[:q] %>" placeholder="Search email, status, error, payload..." class="w-80 rounded-lg border border-slate-700 bg-slate-900/70 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 shadow-sm focus:outline-none focus:ring-2 focus:ring-cyan-400/60" data-search-target="input" data-action="input->search#submit">

  <select name="status" class="rounded-lg border border-slate-700 bg-slate-900/70 px-3 py-2 text-sm text-slate-100 shadow-sm focus:outline-none focus:ring-2 focus:ring-cyan-400/60" data-action="change->search#submit">
    <option value="">All statuses</option>
    <% IntakeAttempt.statuses.keys.each do |status| %>
      <option value="<%= status %>" <%= "selected" if params[:status] == status %>><%= status %></option>
    <% end %>
  </select>

  <input type="text" name="club" value="<%= params[:club] %>" placeholder="Club" class="w-28 rounded-lg border border-slate-700 bg-slate-900/70 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 shadow-sm focus:outline-none focus:ring-2 focus:ring-cyan-400/60" data-action="input->search#submit">

  <input type="hidden" name="page" value="1">
</form>
