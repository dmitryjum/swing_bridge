<div class="p-8 lg:p-12 animate-in fade-in slide-in-from-right-4 duration-500">
  <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-6 mb-12">
    <div>
      <div class="flex items-center space-x-3 mb-3">
        <span class="px-2 py-0.5 bg-blue-100 text-blue-700 text-[10px] font-bold uppercase tracking-widest rounded">Attempt Inspector</span>
        <span class="text-slate-300">â€¢</span>
        <span class="text-[10px] font-bold text-slate-400 font-mono"><%= @attempt.id %></span>
      </div>
      <h1 class="text-3xl lg:text-4xl font-extrabold text-slate-900 tracking-tight mb-2"><%= @attempt.email %></h1>
      <p class="text-sm font-medium text-slate-500 flex items-center">
        <svg class="w-4 h-4 mr-1.5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        Club ID: <span class="text-slate-900 ml-1"><%= @attempt.club %></span>
      </p>
    </div>

    <div class="flex items-center space-x-3">
      <%= button_to retry_admin_intake_attempt_path(@attempt), method: :post, 
          class: "group relative inline-flex items-center px-6 py-3 bg-[#2563EB] hover:bg-blue-700 text-white rounded-xl font-bold text-xs uppercase tracking-widest shadow-xl shadow-blue-500/20 transition-all hover:-translate-y-0.5 active:translate-y-0" do %>
        <svg class="w-4 h-4 mr-2 group-hover:rotate-180 transition-transform duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Retry Process
      <% end %>
    </div>
  </div>

  <!-- Status Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 2xl:grid-cols-3 gap-6 mb-12">
    <div class="bg-white p-6 rounded-2xl border border-slate-100 shadow-sm transition-all hover:shadow-md">
      <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-2">Current Status</p>
      <div class="flex items-center space-x-3">
        <span class="w-3 h-3 rounded-full <%= status_dot_for(@attempt) %> shadow-[0_0_8px_rgba(0,0,0,0.1)] ring-4 ring-slate-50"></span>
        <span class="text-lg font-bold text-slate-900 uppercase tracking-tight"><%= @attempt.status.humanize %></span>
      </div>
    </div>
    
    <div class="bg-white p-6 rounded-2xl border border-slate-100 shadow-sm transition-all hover:shadow-md">
      <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-2">Created At</p>
      <p class="text-lg font-bold text-slate-900 font-mono tracking-tight"><%= @attempt.created_at.to_fs(:db) %></p>
    </div>

    <div class="bg-white p-6 rounded-2xl border border-slate-100 shadow-sm transition-all hover:shadow-md">
      <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-2">Attempts</p>
      <p class="text-lg font-bold text-blue-600 font-mono tracking-tight"><%= @attempt.attempts_count %></p>
    </div>
  </div>

  <% if @attempt.error_message.present? %>
    <div class="mb-12 bg-rose-50 border border-rose-100 p-6 rounded-2xl flex items-start space-x-4">
      <div class="w-8 h-8 bg-rose-500 rounded-lg flex items-center justify-center flex-shrink-0 shadow-lg">
        <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <div>
        <h4 class="text-xs font-bold text-rose-900 uppercase tracking-widest mb-1">Execution Error</h4>
        <p class="text-sm font-medium text-rose-700 leading-relaxed"><%= @attempt.error_message %></p>
      </div>
    </div>
  <% end %>

  <!-- JSON Payloads -->
  <div class="grid grid-cols-1 2xl:grid-cols-2 gap-8">
    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <h3 class="text-xs font-extrabold text-[#1E293B] uppercase tracking-widest flex items-center">
          <span class="w-1.5 h-3 bg-blue-500 rounded-full mr-2"></span>
          Inbound Request
        </h3>
        <span class="text-[9px] font-bold text-slate-300 font-mono uppercase tracking-widest select-none">JSON PAYLOAD</span>
      </div>
      <div class="bg-[#1E293B] rounded-2xl p-6 shadow-2xl relative overflow-hidden group max-h-[500px] overflow-y-auto">
        <div class="absolute inset-0 bg-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
        <pre class="font-fira-code text-xs text-blue-300 leading-relaxed overflow-x-auto selection:bg-blue-500/30"><code><%= JSON.pretty_generate(@attempt.request_payload) %></code></pre>
      </div>
    </div>

    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <h3 class="text-xs font-extrabold text-[#1E293B] uppercase tracking-widest flex items-center">
          <span class="w-1.5 h-3 bg-emerald-500 rounded-full mr-2"></span>
          Upstream Response
        </h3>
        <span class="text-[9px] font-bold text-slate-300 font-mono uppercase tracking-widest select-none">METADATA RESPONSE</span>
      </div>
      <div class="bg-[#1E293B] rounded-2xl p-6 shadow-2xl relative overflow-hidden group max-h-[500px] overflow-y-auto">
        <div class="absolute inset-0 bg-emerald-500/5 opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
        <pre class="font-fira-code text-xs text-emerald-300 leading-relaxed overflow-x-auto selection:bg-emerald-500/30"><code><%= JSON.pretty_generate(@attempt.response_payload) %></code></pre>
      </div>
    </div>
  </div>
</div>
