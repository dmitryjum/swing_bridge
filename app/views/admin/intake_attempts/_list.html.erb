<div class="min-w-full pb-8">
  <% if attempts.any? %>
    <%= render Admin::AttemptItemComponent.with_collection(attempts) %>
  <% else %>
    <div class="p-12 text-center">
      <div class="inline-flex items-center justify-center w-12 h-12 bg-slate-100 rounded-full mb-4">
        <svg class="w-6 h-6 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
      <p class="text-[11px] font-bold text-slate-400 uppercase tracking-widest">No matching attempts</p>
    </div>
  <% end %>
</div>
