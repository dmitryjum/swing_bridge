<!doctype html>
<html>
  <head>
    <title>SwingBridge Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% unless Rails.env.test? %>
      <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <% end %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-slate-950 text-slate-100">
    <div class="min-h-screen bg-[radial-gradient(circle_at_20%_10%,rgba(20,184,166,0.18),transparent_45%),radial-gradient(circle_at_80%_10%,rgba(59,130,246,0.12),transparent_40%),radial-gradient(circle_at_50%_90%,rgba(14,165,233,0.10),transparent_45%)]">
      <%= yield %>
    </div>
  </body>
</html>
